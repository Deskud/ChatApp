<UserControl x:Class="ChatApp.View.UserControls.LoginForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Name ="tboxInput" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="20" FontWeight="Light" BorderThickness="1" Background="Transparent" TextChanged="tboxInput_TextChanged" Height="50"></TextBox>
        <TextBlock Name="tbPlaceholder" VerticalAlignment="Center" FontSize="20" FontWeight="Light" Margin="5,0,5,0" Text="{Binding Placeholder}" Foreground="LightGray" Background="Transparent" Panel.ZIndex="-1"></TextBlock>
        <Button Name ="btnClear" Grid.Column="1" Content="X" Foreground ="White" Background="Red" BorderThickness="0" Click="btnClear_Click"></Button>
     
    </Grid>
    
</UserControl>
